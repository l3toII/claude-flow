{
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/workflow-intent.sh",
        "timeout": 3000
      }
    ],
    "SessionStart": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh",
        "timeout": 15000
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/session-save.sh",
        "timeout": 10000
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/guard-story-exists.sh",
        "timeout": 5000
      },
      {
        "matcher": "Write|Edit",
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/guard-secrets.sh",
        "timeout": 5000
      }
    ]
  }
}
